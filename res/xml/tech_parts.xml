<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
		android:title="@string/Trackball_settings_title">

        <CheckBoxPreference android:key="pref_trackball_wake"
        android:title="@string/pref_trackball_wake_title" 
        android:summary="@string/pref_trackball_wake_summary" />

  		<CheckBoxPreference android:key="pref_trackball_unlock"
        android:title="@string/pref_trackball_unlock_title" 
        android:summary="@string/pref_trackball_unlock_summary" />
 	</PreferenceCategory>            
  
	<PreferenceCategory
		android:title="@string/adb_settings_title">  
        
  		<CheckBoxPreference
        android:key="adb_notify"
        android:title="@string/adb_notify"
        android:summary="@string/adb_notify_summary"/>
       
  		<CheckBoxPreference
        android:key="adb_wifi"
     	android:title="@string/adb_wifi_title"
     	android:summaryOn="@string/adb_wifi_summary_on"
     	android:summaryOff="@string/adb_wifi_summary_off" />     
        
 	 </PreferenceCategory> 


</PreferenceScreen>

